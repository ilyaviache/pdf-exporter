{
  "name": "pdf-exporter",
  "version": "1.0.0",
  "description": "PDF Export Application",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "electron:start": "electron .",
    "electron:build": "electron-builder --mac --arm64"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.1692.0",
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.5",
    "fs": "0.0.1-security",
    "p-map": "^7.0.0",
    "path": "^0.12.7",
    "pdf-lib": "^1.17.1",
    "puppeteer": "^23.8.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.pdfexporter.app",
    "asar": false,
    "asarUnpack": [
      "node_modules/puppeteer/.local-chromium/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dir"],
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "win": {
      "target": ["nsis"]
    },
    "files": [
      "electron/**/*",
      "scripts/**/*",
      "index.js",
      "config/**/*",
      "package.json",
      "node_modules/**/*",
      "fonts/**/*"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "extraResources": [
      {
        "from": "fonts",
        "to": "fonts"
      },
      {
        "from": ".",
        "to": ".",
        "filter": [
          "scripts/**/*",
          "index.js",
          "config/**/*"
        ]
      }
    ]
  }
}
